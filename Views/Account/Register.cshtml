@model Abc.MvcWebUI.Models.Register

@{
    ViewBag.Title = "title";
  
}
<style>
    .login {
        margin-left: 24em;
    }
</style>
<div class="col-md-6 login  ftco-animate">
    <h1 class="text-center mt-5">Üye Ol</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">

            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Lütfen  adınızı giriniz!" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.TextBoxFor(model => model.SurName, new { @class = "form-control", placeholder = "Lütfen  soyadınızı giriniz!" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Lütfen kullanıcı adınızı giriniz!" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Lütfen emailinizi giriniz!" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Lütfen şifrenizi giriniz!" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.PasswordFor(model => model.RePassword, new { @class = "form-control", placeholder = "Lütfen şifrenizi tekrar giriniz!" })
            @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })

        </div>
        <div class="form-group text-center mb-5">
            <input type="submit" value="Kayıt ol" class="btn btn-primary py-3 px-5">
        </div>
    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
