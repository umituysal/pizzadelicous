
@using Pizza.MvcWebUI.Models
@model IEnumerable<BlogModel>


@foreach (var item in Model)
{
    
<div class="block-21 mb-4 d-flex">
    <a class="blog-img mr-4" href="/Home/BlogDetail/@item.Id" style="background-image: url(/Upload/@item.Image);"></a>
        <div class="text">
            <h3 class="heading"><a href="#">@item.Title</a></h3>
            <div class="meta">
                <div><a href="#"><span class="icon-calendar"></span> @item.Date</a></div>
                <div><a href="#"><span class="icon-chat"></span> 19</a></div>
            </div>
        </div>
    
</div>

}